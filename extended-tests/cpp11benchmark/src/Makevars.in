CXX_STD = CXXNN
# PKG_CPPFLAGS = -I vendor/
# Use R-provided OpenMP flags when available, otherwise configure will
# substitute @OMP_CFLAGS@ and @OMP_LIBS@ with appropriate fallbacks.
PKG_CXXFLAGS = $(SHLIB_OPENMP_CXXFLAGS) @OMP_CFLAGS@ -DARMA_OPENMP_THREADS=@ncores@
PKG_LIBS = $(SHLIB_OPENMP_CXXFLAGS) @OMP_LIBS@ $(LAPACK_LIBS) $(BLAS_LIBS) $(FLIBS)
